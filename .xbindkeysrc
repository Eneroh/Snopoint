# mpc play/pause
"mpc toggle && sh ~/.scripts/OSD.sh"
XF86AudioPlay + Shift

# mpc next track
"mpc next && sh ~/.scripts/OSD.sh"
XF86AudioNext + Shift

# mpc previous track
"mpc prev && sh ~/.scripts/OSD.sh"
XF86AudioPrev + Shift

# mpc increase volume
"mpc volume +2 && sh ~/.scripts/vol.sh"
XF86AudioRaiseVolume + Shift

# mpc lower volume
"mpc volume -2 && sh ~/.scripts/vol.sh"
XF86AudioLowerVolume + Shift
